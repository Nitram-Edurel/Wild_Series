{% extends 'base.html.twig' %}


{% block title %}Série #{{ program.id }}

{% endblock %}

{% block body %}
	<h1 class="text-center">Liste des saisons de la série
		{{ program.title }}
		:
	</h1>

	<main class="container">
		<div class="image d-flex">
			<img class="align-center mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
		</div>
		<h2 class="mt-0">{{ program.title }}</h2>
		<h3>Catégorie :
			{{ program.category.name }}</h3>
		<h3 class="card-title">Les acteurs :</h3>
		{% for actor in program.actors %}
			<div class="card">
				<h4 href="{{ path('actor_show', { id: actor.id }) }}">{{ loop.index }}
					-
					{{ actor.name }}</h4>
			</div>
		{% else %}
			Aucun acteur pour cette série.
		{% endfor %}
		<p>{{ program.summary }}</p>
		<div class="row justify-content-center gap-5">
			{% for season in seasons %}
				<div class="card bg-light mb-3 mb-5 p-0">
					<div class="card">
						<div class="card-header">
							<h3 class="mt-0">saison :
								{{ season.number }}</h3>
						</div>
						<div class="card-body">
							<p class="mt-0">{{ season.description }}</p>
							<h4 class="card-title">{{ season.year }}</h4>
							<a href="{{ path('program_season_show',{programId: program.id, seasonId: season.id }) }}" class="btn btn-secondary p-2 px-4">
								Voir le détail</a>
						</div>
					</div>
				</div>
			{% else %}
				Pas de saison disponible.
			{% endfor %}
			<a class="text-dark" href="{{ path('program_index') }}">Retour à la liste des programmes</a>
		</div>
	</main>
{% endblock %}
